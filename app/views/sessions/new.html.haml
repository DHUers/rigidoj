- content_for :title, 'Log in'

.row
  .col-md-offset-3.col-md-6
    .panel.panel-default
      .panel-heading
        %h4 Log in
      .panel-body
        = form_for :session, html: {role: 'form'}, url: login_path do |f|
          .form-group
            = f.label :login, 'Username or Email'
            = f.text_field :login, class: 'form-control'
          .form-group
            = f.label :password
            = f.password_field :password, class: 'form-control'
          = button_tag 'Sign in', class: 'btn btn-default'
