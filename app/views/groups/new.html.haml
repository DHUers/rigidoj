- content_for :title, 'Create new group'

.row
  .col-md-9
    %ol.breadcrumb
      %li= link_to 'Home', root_path
      %li= link_to 'Group', groups_path
      %li.active Create new group

.row
  .col-md-9
    = form_for @group, html: {role: 'form', class: 'create-group group-form'} do |f|
      = render partial: 'form', locals: { f: f }
      = f.button 'Create', class: 'btn btn-success'
      = link_to 'Cancel', groups_path

