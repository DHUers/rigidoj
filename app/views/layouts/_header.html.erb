<% if current_user %>
  <nav class="navbar navbar-success navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-drawer">
          <span class="sr-only">切换导航面板</span>
          <i class="fa fa-bars"></i>
        </button>
        <%= link_to 'Brand', root_path, class: 'navbar-brand' %>
      </div>

      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
      </form>
      <div class="collapse navbar-collapse" id="navbar-drawer">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Problem', problems_path %></li>
          <li><%= link_to 'Contest', contests_path %></li>
          <li><%= link_to 'Post', posts_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">More <i class="fa fa-caret-down"></i></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Help', help_path %></li>
              <li class="divider"></li>
              <li><%= link_to 'About', about_path %></li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% unless current_user %>
            <li><%= link_to 'Sign up', registration_path %></li>
            <li><%= link_to 'Log in', login_path %></li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-comment"></i>
              </a>
              <ul class="dropdown-menu">
                <li><a href="#"><i class="icon-arrow-up"></i> Up</a></li>
                <li><a href="#"><i class="icon-arrow-down"></i> Down</a></li>
                <li><a href="#"><i class="icon-arrow-left"></i> Left</a></li>
                <li><a href="#"><i class="icon-arrow-right"></i> Right</a></li>
              </ul>
            </li>
            <li>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                <%= current_user.username %> <i class="fa fa-caret-down"></i>
              </a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'My profile', user_path(current_user) %></li>
                <li><%= link_to 'Settings', edit_user_path(current_user) %></li>
                <li><%= link_to 'Favroites', user_favroites_path(current_user) %></li>
                <li><%= link_to 'Notes', user_notes_path(current_user) %></li>
                <% if current_user.staff? %>
                  <li><%= link_to 'Admin', admin_dashboard_path %></li>
                <% end%>
                <li class="divider"></li>
                <li><%= link_to 'Log out', logout_path, method: :delete, data: { confirm: 'Are you sure?' }  %></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
<% else %>
<% end %>
