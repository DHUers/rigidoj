<% content_for :title, "Editing #{@problem.title}" %>

<div class="row">
  <div class="col-md-9">
    <ol class="breadcrumb">
      <li><%= link_to 'Home', root_path %></li>
      <li><%= link_to 'Problem', problems_path %></li>
      <li class="active">Update problem</li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-md-9">
    <%= form_for @problem, html: {role: 'form', class: 'problem-form'} do |f| %>
      <%= render partial: 'form', locals: { f: f } %>

      <div class="checkbox">
        <label>
          <%= f.check_box :public, value: 'yes' %> Public
        </label>
      </div>
      <%= f.button 'Update', class: 'btn btn-warning' %>
      <%= link_to 'Cancel', problems_path %>
    <% end %>
  </div>
</div>
