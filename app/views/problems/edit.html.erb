<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <h2>Update a problem</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-offset-1 col-md-10">
    <%= form_for @problem, html: {role: 'form'} do |f| %>
      <%= render partial: 'form', locals: { f: f } %>

      <%= f.button 'Update', class: 'btn btn-warning' %>
      <%= button_to 'Cancel', problem_path(params[:id]), class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
