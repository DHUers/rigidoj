<div class="form-group">
  <label for="problem-title">Problem title</label>
  <%= f.text_field :title, class: 'form-control', id: 'problem-title', placeholder: 'Are you ok?' %>
</div>

<div class="form-group">
  <label for="problem-content">Problem content</label>
  <%= f.text_area :raw, class: 'form-control', id: 'problem-content' %>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="input-group">
      <%= f.text_field :time_limit, class: 'form-control', placeholder: 'Time limit' %>
      <span class="input-group-addon">KB</span>
    </div>
  </div>

  <div class="col-md-6">
    <div class="input-group">
      <%= f.text_field :memory_limit, class: 'form-control', placeholder: 'Memory limit' %>
      <span class="input-group-addon">KB</span>
    </div>
  </div>
</div>

<div class="form-group">
  <label for="problem-source">Source</label>
  <%= f.text_area :source, class: 'form-control', id: 'problem-source' %>
</div>
