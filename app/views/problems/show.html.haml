- content_for :title, @problem.title

- if current_user && current_user.staff?
  #problem-admin.admin-wrench.btn-group
    %button{type: 'button', class: 'btn btn-default dropdown-toggle',
        data: {toggle: 'dropdown'}, aria: {expanded: 'false'}}
      %i.fa.fa-wrench
    %ul.dropdown-menu.pull-right{role: 'menu'}
      %li
        %a{href: edit_problem_path(@problem)}
          Edit problem

.row
  .col-xs-12
    .page-header
      %h1.problem-title
        = @problem.id
        = @problem.title
.row
  .col-xs-9.problem-body
    :preserve
      #{raw @problem.baked}
  .col-xs-3
    %ul.action-list.problem-actions.sticky
      %li
        %a{href: new_problem_solution_path(@problem)}
          %i.fa.fa-plus-circle
          Submit
      %li
        %a{href: problem_solutions_path(@problem)}
          %i.fa.fa-history
          Submitted records
