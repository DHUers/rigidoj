= content_for :title, 'Sign up'

.row
  .col-md-12
    %h3 Join RigidOJ
    %p Conquer the problems and win the contests.
.row
  .col-md-9
    = render 'shared/error_messages', record: @user
    .panel.panel-default
      .panel-heading
        %h4 Create your personal account
      .panel-body
        = form_for @user, html: {role: 'form'} do |f|
          .form-group
            = f.label :username
            = f.text_field :username, class: 'form-control'
            = field_describer @user.errors[:username], 'This will be your username.'
          .form-group
            = f.label :email, 'Email Address'
            = f.text_field :email, class: 'form-control'
            = field_describer @user.errors[:email], 'You will occasionally receive account related emails.'
          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
            = field_describer @user.errors[:name], 'Your full name.'
          .form-group
            = f.label :crew, 'Class'
            = f.text_field :crew, class: 'form-control'
            = field_describer @user.errors[:crew], 'Your class'
          .form-group
            = f.label :student_id, 'Student ID'
            = f.text_field :student_id, class: 'form-control'
            = field_describer @user.errors[:student_id], 'Your student ID.'
          .form-group
            = f.label :password
            = f.password_field :password, class: 'form-control'
            = field_describer @user.errors[:password]
          .form-group
            = f.label :password_confirmation
            = f.password_field :password_confirmation, class: 'form-control'
            = field_describer @user.errors[:password_confirmation]
          %p.tos-info
            By clicking on "Create an account" below, you are agreeing to the
            \#{link_to 'Terms of Service'} and the
            \#{link_to 'Privacy Policy'}.
          = button_tag 'Create an account', class: 'btn btn-success pull-right'
  .col-md-3
    .panel.panel-default
      .panel-heading
        %h4 Enjoy rigidoj
      .panel-body
        %ul.features-list.list-unstyled
          %li
            %strong Intensive
            contests
          %li
            %strong Challenging
            puzzles
          .divider
          %li
            %i.fa.fa-check
            Helpful communication
          %li
            %i.fa.fa-check
            Keeping your status
          %li
            %i.fa.fa-check
            Easily manage contests
