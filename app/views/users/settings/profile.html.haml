- content_for :title, 'Profile'

.row
  = render 'users/settings/navlist'
  .col-md-9
    .panel.setting-panel.panel-default
      .panel-heading
        %h3.panel-title Public profile
      .panel-body
        = form_for current_user, html: {role: 'form'}, url: settings_profile_path, method: :post do |f|
          .form-group
            = f.label :avatar
            = f.file_field :avatar
          .form-group
            = f.label :username
            = f.text_field :username, class: 'form-control'
          .form-group
            = f.label :name
            = f.text_field :name, class: 'form-control'
          .form-group
            = f.label :crew, 'Class'
            = f.text_field :crew, class: 'form-control'
          .form-group
            = f.label :student_id
            = f.text_field :student_id, class: 'form-control'
          .form-group
            = f.label :website
            = f.text_field :website, class: 'form-control'
          = f.submit 'Update profile', class: 'btn btn-success'
