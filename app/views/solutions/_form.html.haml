.form-group
  .row
    .col-md-8
      = f.label :problem_id
      = f.text_field :problem_id, class: 'form-control', disabled: params[:problem_id] ? true : false
    .col-md-4
      = f.label :platform
      = f.select :platform, platform_select_options, {}, class: 'form-control'
.form-group
  = render @problem if @problem
.form-group
  = render partial: 'components/source_editor',  |
    locals: {                                    |
    preview_url: '',                             |
    ace_mode: @solution.ace_mode,                |
    indent_width: %w(2 4 8),                     |
    tab_label: 'Source code',                    |
    preview_label: 'Preview',                    |
    attribute: f.text_area(:source) }            |
