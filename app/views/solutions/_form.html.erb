<div class="form-group">
  <%= f.label :problem_id %>
  <%= f.text_field :problem_id, class: 'form-control' %>
  <%= f.label :platform %>
  <%= f.text_field :platform, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.hidden_field :source %>
  <%= render partial: 'components/source_editor',
             locals: {
                 preview_url: preview_solution_path(@solution),
                 ace_mode: 'markdown',
                 indent_width: %w(2 4 8),
                 tab_label: 'Edit content',
                 preview_label: 'Preview',
                 textarea_id: 'solution-content' } %>
</div>
