<div class="landing-header">
  <nav class="navbar navbar-success navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-drawer">
          <span class="sr-only">Toogle navigation</span>
          <i class="fa fa-bars"></i>
        </button>
        <%= link_to 'Brand', root_path, class: 'navbar-brand' %>
      </div>

      <div class="collapse navbar-collapse" id="navbar-drawer">
        <ul class="nav navbar-nav navbar-right" id="landing-nav">
          <li><%= link_to 'Problem', problems_path %><span></span></li>
          <li><%= link_to 'Contest', contests_path %><span></span></li>
          <li><%= link_to 'Help', help_path %><span></span></li>
          <li><%= link_to 'About', about_path %><span></span></li>
          <li><%= button_to 'Log in', login_path, class: 'btn btn-default', method: :get %></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="header-content">
    <div class="container">
      <div class="row">
        <div class="center-block text-center">
          <h1>Conquer All Puzzles</h1>
        </div>
      </div>
      <div class="row">
        <div class="text-center">
          <%= button_to 'Sign up', registration_path, class: 'btn btn-default', method: :get %>
        </div>
      </div>
    </div>
  </div>
</div>

<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="thumbnail">
          <%= image_tag 'history.svg' %>
          <div class="caption">
            <h3>History</h3>
            <p>Keeping all your data. And analyzed for you.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= image_tag 'notification.svg' %>
          <div class="caption">
            <h3>Notification</h3>
            <p>Notification will be sent to you in real time or email. Never interrupt you.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= image_tag 'search.png' %>
          <div class="caption">
            <h3>Search</h3>
            <p>Search everything. Problem, contests, old solution, whatever.</p>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="text-center">
        <%= button_to 'Sign up', registration_path, class: 'btn btn-default landing-btn', method: :get %>
      </div>
    </div>
  </div>
</section>

<footer id="footer">
  <div class="container">
    <div class="cat-logo">
      <%= image_tag 'pirate-cat.png' %>
    </div>
    <div class="row">
      <div class="col-md-3">
