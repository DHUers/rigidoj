- content_for :title, 'Home'

.row
  .col-xs-8
    - @posts.each do |p|
      %section.pined-post
        %h2= p.title
        = p.raw
  .col-xs-4
    .panel.panel-default
      .panel-heading Links
      .panel-body
        Related links.
.row
  .col-xs-8
    .panel.panel-default
      .panel-heading Contests
      .panel-body
        - unless (l = Contest.latest).blank?
          - l.each do |c|
            = render partial: 'contests/contest', locals: {:@contest => c}
        - else
          There is no contest.
  .col-xs-4
