.landing-header
  %nav.navbar.navbar-success.navbar-static-top{:role => "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{"data-target" => "#navbar-drawer", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toogle navigation
          %i.fa.fa-bars
        = link_to root_path, class: 'navbar-brand' do
          %img{:src => SiteSetting.logo_url, :width => "32"}/
      #navbar-drawer.collapse.navbar-collapse
        %ul#landing-nav.nav.navbar-nav.navbar-right
          %li
            = link_to 'Problem', problems_path
            %span
          %li
            = link_to 'Contest', contests_path
            %span
          %li
            = link_to 'Help', help_path
            %span
          %li
            = link_to 'About', about_path
            %span
          %li= button_to 'Log in', login_path, class: 'btn btn-default', method: :get
  .header-content
    .container
      .row
        .center-block.text-center
          %h1 Conquer All Puzzles
      .row
        .text-center
          = button_to 'Sign up', registration_path, class: 'btn btn-default', method: :get
%section#main
  .container
    .row
      .col-sm-4
        .thumbnail
          = image_tag 'history.svg'
          .caption
            %h3 History
            %p Keeping all your data. And analyzed for you.
      .col-sm-4
        .thumbnail
          = image_tag 'notification.svg'
          .caption
            %h3 Notification
            %p Notification will be sent to you in real time or email. Never interrupt you.
      .col-sm-4
        .thumbnail
          = image_tag 'search.png'
          .caption
            %h3 Search
            %p Search everything. Problem, contests, old solution, whatever.
    .row
      .text-center
        = button_to 'Sign up', registration_path, class: 'btn btn-default landing-btn', method: :get
%footer#footer
  .container
    .cat-logo
      = image_tag 'pirate-cat.png'
    .row
      .col-xs-3.col-xs-7
        Â© 2014 Powered by
        = succeed "." do
          %a{:href => "https://github.com/fantasticfears/rigidoj", :title => "Rigid's Github"} Rigid OJ
      .col-xs-9.col-xs-5
        %ul.footer-nav.navbar
          %li= link_to 'Help', help_path
          %li= link_to 'About', about_path
