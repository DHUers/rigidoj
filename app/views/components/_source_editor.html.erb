<div class="source-editor" data-mode="<%= ace_mode %>">
  <div class="meta clearfix">
    <ul class="edit-tabs">
      <li role="presentation">
        <a href="#" class="edit-tab selected">
          <i class="fa fa-code"></i> <%= tab_label %>
        </a>
      </li>
      <li role="presentation">
        <a href="#" class="edit-tab" data-preview-url="<%= preview_url %>">
          <i class="fa fa-eye"></i> <%= preview_label %>
        </a>
      </li>
    </ul>
    <div class="actions pull-right">
      <select data-option="useSoftTabs">
        <optgroup label="Indent mode">
          <option value="true">Spaces</option>
          <option value="false">Tabs</option>
        </optgroup>
      </select>

      <% if indent_width %>
        <select data-option="tabSize">
          <optgroup label="Indent size">
            <% indent_width.each do |i| %>
              <option value="<%= i %>"><%= i %></option>
            <% end %>
          </optgroup>
        </select>
      <% end %>

      <select data-option="wrap">
        <optgroup label="Line wrap mode">
          <option value="off">No wrap</option>
          <option value="on">Soft wrap</option>
        </optgroup>
      </select>
    </div>
  </div>
  <div>
    <div class="source-editor-textarea" id="<%= textarea_id %>"></div>
    <div class="preview-area hidden"></div>
  </div>
</div>
