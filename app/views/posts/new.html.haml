- content_for :title, 'New post'

.row
  .col-md-10
    .panel.panel-default
      .panel-heading
        %h4 Create a post
      .panel-body
        = form_for :comment, url: @contest ? contest_posts_path(@contest.slug, @contest.id) : posts_path, html: {role: 'form'} do |f|
          = render partial: 'form', locals: { f: f }
          = f.button 'Create', class: 'btn btn-success'
          = link_to 'Cancel', @contest ? contest_path(@contest.slug, @contest.id) : posts_path
  - if @contest
    .col-md-2
      = render partial: 'posts/related_post'
